<% if drink.favorited_by?(current_user) %>
  <%= link_to drink_favorite_path(drink), method: :delete, remote: true do %>
      ♥<%= drink.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to drink_favorite_path(drink), method: :post, remote: true do %>
    ♡<%= drink.favorites.count %>
  <% end %>
<% end %>