<% if current_user.following?(user) %>
  <%= link_to user_relationships_path(user.id), class:"btn btn-outline-secondary btn-block width: 50%;", method: :delete,remote: true,data: {"turbolinks" => false} do %>
    <i class="fa-solid fa-user-minus">フォローを外す</i>
  <% end %>
  <% else %>
  <%= link_to user_relationships_path(user.id), class:"btn btn-outline-secondary btn-block", method: :post,remote: true,data: {"turbolinks" => false} do %>
    <i class="fa-solid fa-user-plus">フォローする</i>
  <% end %>
<% end %>