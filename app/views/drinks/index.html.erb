<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--部分テンプレート-->
      <%= render 'drinks', user: @user,drink: @drink,taste: @taste,tastes: @tastes %>
      <!--部分テンプレート終-->
    </div>

<!--　お酒の投稿一覧　-->
    <div class="col-md-8 offset-md-1">
      <h1>Drinks</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>銘柄</th>
            <th>商品説明</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @drinks.each do |drink| %>
            <tr>
              <td><%= link_to drink_path(drink.user) do %>
              <%#= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
              </td>
              <td><%= link_to drink.brand, drink_path(drink.id) %></td>
              <td><%= drink.text %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>